<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- background image for main screen -->
    <style name="custom_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/imageBg_height</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:alpha">.1</item>
        <item name="android:layout_alignParentTop">true</item>

    </style>
    <!-- Start up buttons -->
    <style name="custom_button">
        <item name="android:background">@drawable/red_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">@color/colorSubmit</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Reset button styling-->
    <style name="resetButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textColor">@color/colorSubmit</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Linear Layout of each Team-->
    <style name="teams">
        <item name="android:layout_width">@dimen/textview_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style of Team A and Team B-->
    <style name="teamNames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Style of Goal for each Team-->
    <style name="score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons styling, except Reset Button-->
    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textColor">@color/colorSubmit</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText styling-->
    <style name="custom_editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:hint">Add points</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Rules TextView -->
    <style name="rules_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
